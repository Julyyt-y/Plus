<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <!--头像-->
        <!--
        fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="2000"
            fresco:roundAsCircle="true"
        -->
        <ImageView
            android:id="@+id/iam_sdv_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="#fff"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />
        <!--右侧-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--昵称以及回复人昵称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp">
                <!--昵称-->
                <TextView
                    android:id="@+id/iam_tv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="1314****0201"
                    android:textColor="#000"
                    android:textSize="12dp"/>
                <!--回复两字-->
                <TextView
                    android:id="@+id/iam_tv_huifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="#f11414"
                    android:textSize="12dp"/>
                <!--回复了谁-->
                <TextView
                    android:id="@+id/iam_tv_replyed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="张三"
                    android:textColor="#0b0b0b"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp">
                <!--性别-->
                <ImageView
                    android:id="@+id/iam_iv_sex"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/angle"
                    />

                <!--位置-->
                <TextView
                    android:id="@+id/iam_tv_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="XXXX工程大学  -- 软件工程学院"
                    android:textColor="#c6c4c4"
                    android:textSize="8dp"/>
            </LinearLayout>
            <!--评论内容-->
            <TextView
                android:id="@+id/iam_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="3"
                android:minLines="1"
                android:text="呀呀呀呀呀，真不错"
                android:textColor="#000"
                android:textSize="12dp"/>
            <!--评论时间-->
            <TextView
                android:id="@+id/iam_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="2016-05-26 11:56:36"
                android:textColor="#8b8787"
                android:textSize="8dp"/>
        </LinearLayout>

    </LinearLayout>
    <!--横线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c7c7"/>

</LinearLayout>